<main>

  {{#if hasMovies}}

    <h1 class="text-center mb-5">Listado de Pel√≠culas</h1>

    <div class="row">
      {{#each movies}}

        <div class="col mb-4">
          <div class="card border border-2 {{#if (IsEqual this.status "active")}}border-info{{else}}border-danger{{/if}}" style="width: 25rem; height: 31rem">
            <img src="{{this.imageUrl}}" class="card-img-top" alt="{{this.title}}" />
            <div class="card-body">
              <h4 class="card-title text-center">{{this.title}} </h4>
              <p class="card-text">
                {{this.description}}
              </p>
              <p>
                <strong>Generos:</strong>
                {{this.gender}}
              </p>

              <a
                href="edit-movie/{{this.id}}?edit=true"
                class="btn btn-info float-end"
              >Actualizar</a>

              <form action="/admin/delete-movie" method="post">
                <input type="hidden" name="MovieId" value="{{this.id}}" />
                <button class="btn btn-danger float-end me-2">Eliminar</button>
              </form>
            </div>
          </div>
        </div>

      {{/each}}
    </div>
  {{else}}

    <h1>No hay peliculas registradas</h1>

  {{/if}}

</main>